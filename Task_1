#include <iostream>
using namespace std;

int main() {
    int size;
    cout << "Введіть розмір масиву: ";
    cin >> size;

    int array[size][size];

    int number;
    cout << "Введіть число: ";
    cin >> number;

    array[0][0] = number;

    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            if (i == 0 && j == 0) {
                continue;
            }

            array[i][j] = array[i-1][j] * 2;
        }
    }

    cout << "Двовимірний масив:" << endl;
    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            cout << array[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
